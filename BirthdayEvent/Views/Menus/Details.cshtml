@model BirthdayEvent.Models.Menu

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Menu Details -  @Html.DisplayFor(model => model.foodMenuType)</h2>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr class="danger">
                <th data-defaultsign="_19"> Menu ID</th>
                <th>  @Html.DisplayFor(model => model.foodMenuId)   </th>
            </tr>
            <tr class="danger">
                <th data-defaultsign="AZ">Food Menu Image</th>
                <th>  @Html.DisplayFor(model => model.foodMenuImageURL)   </th>
            </tr>
            <tr class="danger">
                <th data-defaultsign="AZ">Food Category</th>
                <th> @Html.DisplayFor(model => model.foodMenuType)    </th>
            </tr>
            <tr class="danger">
                <th data-defaultsign="AZ">Food</th>
                <th>  @Html.DisplayFor(model => model.foodMenuItems)   </th>
            </tr>
            <tr class="danger">
                <th data-defaultsign="month">Cost</th>
                <th>   @Html.DisplayFor(model => model.foodMenuCost)  </th>
            </tr>
        </thead>
    </table>
</div>

<p>
    <a href="@Url.Action("Index", "Menus")" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
    </a>
    <a href="@Url.Action("Edit", "Menus", new { id = Model.foodMenuId } )" class="btn btn-primary">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
    </a>
</p>
