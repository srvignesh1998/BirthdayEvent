@model BirthdayEvent.Models.Menu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Menu -  @Html.DisplayFor(model => model.foodMenuType)</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Menu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Food ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.foodMenuId)
        </dd>
        <dt>
            Food Image URL
        </dt>

        <dd>
            @Html.DisplayFor(model => model.foodMenuImageURL)
        </dd>
        <dt>
            Food
        </dt>

        <dd>
            @Html.DisplayFor(model => model.foodMenuType)
        </dd>

        <dt>
            Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.foodMenuItems)
        </dd>

        <dt>
            Cost
        </dt>

        <dd>
            @Html.DisplayFor(model => model.foodMenuCost)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <a href="@Url.Action("Index", "Menus")" class="btn btn-primary">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
            </a>
            <input type="submit" value="Delete" onclick="return confirm('Are you sure want to Delete Food?')" class="btn btn-primary" />
        </div>
    }
</div>
