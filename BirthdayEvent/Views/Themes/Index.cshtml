@model IEnumerable<BirthdayEvent.Models.Theme>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}

<h2>Theme Management</h2>
<p>
    <a href="@Url.Action("Create", "Themes")" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add Theme
    </a>
</p>


<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">No Record's found.</td>
            </tr>

        }
        else
        {
            <thead>
                <tr class="danger">
                    <th data-defaultsign="_19"> Theme ID</th>
                    <th data-defaultsign="AZ">Theme Name</th>
                    <th data-defaultsign="AZ">Theme Image Url</th>
                    <th data-defaultsign="AZ">Theme Address</th>
                    <th data-defaultsign="AZ">Theme Description</th>
                    <th data-defaultsign="AZ">Theme Photographer</th>
                    <th data-defaultsign="AZ">Theme Videographer</th>
                    <th data-defaultsign="AZ">Theme ReturnGift</th>
                    <th data-defaultsign="month">Cost</th>
                    <th data-defaultsign="AZ">Actions</th>
                </tr>
            </thead>

            foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.themeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themeImageURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themeAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themeDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themePhotographer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themeVideographer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themeReturnGift)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.themeCost)
        </td>
        <td>
            <a href="@Url.Action("Details", "Themes", new { id = item.themeId })" class="btn btn-primary">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> View
            </a>
            <a href="@Url.Action("Edit", "Themes", new { id = item.themeId })" class="btn btn-success">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
            </a>
            <a href="@Url.Action("Delete", "Themes", new { id = item.themeId })" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
            </a>
        </td>
    </tr>

            }
        }
    </table>
</div>

