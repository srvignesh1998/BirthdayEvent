@model BirthdayEvent.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete User -  @Html.DisplayFor(model => model.name)</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            User ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userId)
        </dd>
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            Email Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Mobile Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mobileNumber)
        </dd>

        <dt>
            User Role
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userRole)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
    </a>
    <input type="submit" value="Delete"  onclick="return confirm('Are you sure want to Delete user?')" class="btn btn-primary" /> 
</div>
    }
</div>
