@model BirthdayEvent.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>User Details -  @Html.DisplayFor(model => model.name)</h2>

<div class="table-responsive" >
    <table class="table table-bordered">
    <thead>
        <tr class="danger">
            <th data-defaultsign="_19"> User ID</th>
            <th> @Html.DisplayFor(model => model.userId)</th>
        </tr>
        <tr class="danger">
            <th data-defaultsign="_19"> User Name</th>
            <th> @Html.DisplayFor(model => model.name)</th>
        </tr>
        <tr class="danger">
            <th data-defaultsign="_19"> User Email</th>
            <th> @Html.DisplayFor(model => model.Email)</th>
        </tr>
        <tr class="danger">
            <th data-defaultsign="_19"> Mobile Number</th>
            <th> @Html.DisplayFor(model => model.mobileNumber)</th>
        </tr>
        <tr class="danger">
            <th data-defaultsign="_19"> User Role</th>
            <th> @Html.DisplayFor(model => model.userRole)</th>
        </tr>
    </thead>
    </table>
</div>

<p>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
    </a>
    <a href="@Url.Action("Edit", "Admin", new { id = Model.userId } )" class="btn btn-primary">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
    </a>
</p>
