@model IEnumerable<BirthdayEvent.Models.AddOn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}

<h2>Addon Management</h2>
<p>
    <a href="@Url.Action("Create", "AddOns")" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add Addon
    </a>
</p>


<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">No Record's found.</td>
            </tr>

        }
        else
        {
            <thead>
                <tr class="danger">
                    <th data-defaultsign="_19">AddOn ID</th>
                    <th data-defaultsign="AZ">AddOn Name</th>
                    <th data-defaultsign="AZ">AddOn Description</th>
                    <th data-defaultsign="month">AddOn Price</th>
                    <th data-defaultsign="AZ">AddOn Image Url</th>
                    <th data-defaultsign="AZ">Actions</th>
                </tr>
            </thead>

            foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.addOnId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.addOnName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.addOnDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.addOnPrice)
        </td>
        <td class="text-center">
            <img src="@Html.Raw(item.addOnImageURL)" height="150px" width="250px" alt="a description of the image">
        </td>
        <td>
            <a href="@Url.Action("Details", "AddOns", new { id = item.addOnId })" class="btn btn-primary">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> View
            </a>
            <a href="@Url.Action("Edit", "AddOns", new { id = item.addOnId })" class="btn btn-success">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
            </a>
            <a href="@Url.Action("Delete", "AddOns", new { id = item.addOnId })" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
            </a>
        </td>
    </tr>

            }
        }
    </table>
</div>
