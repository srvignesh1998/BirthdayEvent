@model BirthdayEvent.Models.AddOn

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete AddOn -  @Html.DisplayFor(model => model.addOnName)</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AddOn</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            AddOn Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.addOnName)
        </dd>

        <dt>
            AddOn Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.addOnDescription)
        </dd>

        <dt>
            AddOn Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.addOnPrice)
        </dd>

        <dt>
            AddOn Image URL
        </dt>

        <dd>
            @Html.DisplayFor(model => model.addOnImageURL)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <a href="@Url.Action("Index", "AddOns")" class="btn btn-primary">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
            </a>
            <input type="submit" value="Delete" onclick="return confirm('Are you sure want to Delete AddOns?')" class="btn btn-primary" />
        </div>
    }
</div>
