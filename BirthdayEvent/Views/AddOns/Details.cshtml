@model BirthdayEvent.Models.AddOn

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddOns Details -  @Html.DisplayFor(model => model.addOnName)</h2>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr class="danger">
                <th data-defaultsign="_19"> AddOn ID</th>
                <th>  @Html.DisplayFor(model => model.addOnId)   </th>
            </tr>
            <tr class="danger">
                <th data-defaultsign="AZ">AddOn Name</th>
                <th>  @Html.DisplayFor(model => model.addOnName)   </th>
            </tr>
            <tr class="danger">
                <th data-defaultsign="AZ">AddOn Description</th>
                <th>  @Html.DisplayFor(model => model.addOnDescription)   </th>
            </tr>
            <tr class="danger">
                <th data-defaultsign="month">AddOn Cost</th>
                <th>   @Html.DisplayFor(model => model.addOnPrice)  </th>
            </tr>
            <tr class="danger">
                <th data-defaultsign="AZ">AddOn Image URL</th>
                <th>  @Html.DisplayFor(model => model.addOnImageURL)   </th>
            </tr>
        </thead>
    </table>
</div>

<p>
    <a href="@Url.Action("Index", "AddOns")" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
    </a>
    <a href="@Url.Action("Edit", "AddOns", new { id = Model.addOnId } )" class="btn btn-primary">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
    </a>
</p>

